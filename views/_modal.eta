<!-- Include the basic layout -->
<% layout('./basic', it) %>


<div class="columns">
    <div class="column is-4 is-offset-4">
        <div class="card"> 
        <div class="card-content">
                <div class="content">
                    <% if (typeof it.modal !== 'undefined' && it.modal != "") { %>
                        <p><%= it.modal %></p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>